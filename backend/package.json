  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --exit-child src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "prisma:migrate": "npx prisma migrate dev --schema ./src/prisma/schema.prisma",
    "prisma:generate": "npx prisma generate --schema ./src/prisma/schema.prisma",
    "prisma:migrate:test": "dotenv -e .env.test -- npx prisma migrate deploy --schema ./src/prisma/schema.prisma",
    "prisma:update": "npm run prisma:migrate && npm run prisma:generate && npm run prisma:migrate:test",
    "test": "dotenv -e .env.test -- jest --config jest.config.js --coverage --coverageReporters=text --coverageReporters=text-summary",
    "seed": "ts-node src/seed/seeding.ts"
  },
  "dependencies": {
    "@faker-js/faker": "^9.7.0",
    "@prisma/client": "^6.7.0",
    "@types/express-session": "^1.18.1",
    "@types/passport-google-oauth20": "^2.0.16",
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.6.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-session": "^1.18.1",
    "multer": "^1.4.5-lts.2",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/multer": "^1.4.12",
    "@types/passport-local": "^1.0.38",
    "dotenv-cli": "^8.0.0",
    "jest": "^29.7.0",
    "prisma": "^6.7.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
